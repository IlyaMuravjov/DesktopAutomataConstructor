<Window x:Class="AutomataConstructor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomataConstructor"
        xmlns:test="clr-namespace:ControlsLibrary.Controls.TestPanel;assembly=ControlsLibrary"
        xmlns:scene="clr-namespace:ControlsLibrary.Controls.Scene;assembly=ControlsLibrary"
        xmlns:toolbar="clr-namespace:ControlsLibrary.Controls.Toolbar;assembly=ControlsLibrary"
        xmlns:errorReporter="clr-namespace:ControlsLibrary.Controls.ErrorReporter;assembly=ControlsLibrary"
        xmlns:executor="clr-namespace:ControlsLibrary.Controls.Executor;assembly=ControlsLibrary"
        xmlns:language="clr-namespace:AutomataConstructor.Properties.Languages"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:MainWindow.SaveAutomatAsCommand}" CanExecute="CanSaveAutomatAsCommandExecute" Executed="OnSaveAutomatAsCommandExecuted"/>
        <CommandBinding Command="{x:Static local:MainWindow.SaveAutomatCommand}" CanExecute="CanSaveAutomatCommand" Executed="OnSaveAutomatCommandExecuted"/>
        <CommandBinding Command="{x:Static local:MainWindow.OpenAutomatCommand}" CanExecute="CanOpenAutomatCommandExecute" Executed="OnOpenAutomatCommandExecuted"/>
        <CommandBinding Command="{x:Static local:MainWindow.SaveTestsAsCommand}" CanExecute="CanSaveTestsAsCommandExecute" Executed="OnSaveTestsAsCommandExecuted"/>
        <CommandBinding Command="{x:Static local:MainWindow.OpenTestsCommand}" CanExecute="CanOpenTestsCommandExecute" Executed="OnOpenTestsCommandExecuted"/>
    </Window.CommandBindings>

    <Window.InputBindings>
        <KeyBinding Command="{x:Static local:MainWindow.SaveAutomatAsCommand}" Gesture="CTRL+SHIFT+S"/>
        <KeyBinding Command="{x:Static local:MainWindow.SaveAutomatCommand}" Gesture="CTRL+S"/>
        <KeyBinding Command="{x:Static local:MainWindow.OpenAutomatCommand}" Gesture="CTRL+O"/>
    </Window.InputBindings>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Grid.ColumnSpan="3">
            <MenuItem Header="File">
                <MenuItem Header="Save automat as" Command="{x:Static local:MainWindow.SaveAutomatAsCommand}" InputGestureText="Ctrl+Shift+S"/>
                <MenuItem Header="Save automat" Command="{x:Static local:MainWindow.SaveAutomatCommand}" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Open automat" Command="{x:Static local:MainWindow.OpenAutomatCommand}" InputGestureText="Ctrl+O"/>
                <MenuItem Header="Save tests as" Command="{x:Static local:MainWindow.SaveTestsAsCommand}"/>
                <MenuItem Header="Open tests" Command="{x:Static local:MainWindow.OpenTestsCommand}"/>
            </MenuItem>
        </Menu>

        <toolbar:Toolbar x:Name="toolbar" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Margin="3"/>

        <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" BorderBrush="Aqua" BorderThickness="1"  Margin="2" >
            <Border.Background>
                <VisualBrush TileMode="Tile"  Viewport="0,0,0.09,0.095">
                    <VisualBrush.Visual>
                        <Image Source="pack://application:,,,/Assets/grid_paper.png" Stretch="Uniform" UseLayoutRounding="True" SnapsToDevicePixels="True"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <scene:Scene x:Name="scene" Background="Transparent" VerticalContentAlignment="Center" VerticalAlignment="Center" Grid.RowSpan="3" Grid.ColumnSpan="3"/>
                <errorReporter:ErrorReporter x:Name="errorReporter" Grid.Row="2" Grid.Column="2"/>
                <test:TestPanel x:Name="testPanel" Grid.Row="0" Grid.Column="0"/>
            </Grid>
        </Border>
        <executor:Executor  x:Name="executor" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3"/>
    </Grid>
</Window>
