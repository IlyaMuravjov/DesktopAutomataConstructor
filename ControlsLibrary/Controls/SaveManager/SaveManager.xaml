<UserControl x:Class="ControlsLibrary.Controls.SaveManager.SaveManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlsLibrary.Controls.SaveManager"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:SaveManagerViewModel/>
    </UserControl.DataContext>
    <Grid>
        <StackPanel>
            <Button Content="SAVE LAYOUT" Command="{Binding SaveLayoutCommand}"/>
            <Button Content="LOAD LAYOUT" Command="{Binding LoadLayoutCommand}"/>
            <Button Content="SAVE TESTS" Command="{Binding SaveTestsCommand}"/>
            <Button Content="LOAD TESTS" Command="{Binding LoadTestsCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
