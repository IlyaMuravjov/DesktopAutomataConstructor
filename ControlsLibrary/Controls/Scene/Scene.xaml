<UserControl x:Class="ControlsLibrary.Controls.Scene.Scene"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ControlsLibrary.Controls.Scene"
             xmlns:graphx="http://schemas.panthernet.ru/graphx/"
             xmlns:model="clr-namespace:ControlsLibrary.Model"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="pack://application:,,,/ControlsLibrary;component/View/Templates/EditorTemplates.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        <graphx:ZoomControl x:Name="zoomControl" Background="Transparent" VerticalContentAlignment="Center" VerticalAlignment="Center" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <local:GraphArea x:Name="graphArea" />
        </graphx:ZoomControl>
    </Grid>
</UserControl>