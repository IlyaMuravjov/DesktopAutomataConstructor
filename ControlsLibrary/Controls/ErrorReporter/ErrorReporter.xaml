<UserControl x:Class="ControlsLibrary.Controls.ErrorReporter.ErrorReporter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlsLibrary.Controls.ErrorReporter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:ErrorReporterViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style TargetType="Image">
            <Style.Triggers>
                <DataTrigger Binding="{Binding HasError}" Value="True">
                    <Setter Property="Source" Value="/ControlsLibrary;component/Controls/ErrorReporter/Icons/red_mark.png"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding HasError}" Value="False">
                    <Setter Property="Source" Value="/ControlsLibrary;component/Controls/ErrorReporter/Icons/green_mark.png"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10" MinWidth="75">
            <Image ToolTip="Allright" Stretch="Fill" MaxHeight="50"/>
            <Expander Background="Transparent"  HorizontalAlignment="Left" Header="{Binding ErrorMessage}"  ExpandDirection="Up" >
                <ListView ItemsSource="{Binding Errors}" Background="Transparent" BorderBrush="Transparent" SelectionMode="Extended"/>
            </Expander>
        </StackPanel>
    </Grid>
</UserControl>
