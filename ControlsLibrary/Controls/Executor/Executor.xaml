<UserControl x:Class="ControlsLibrary.Controls.Executor.Executor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlsLibrary.Controls.Executor"
             mc:Ignorable="d" 
             >
    <UserControl.DataContext>
        <local:ExecutorViewModel/>
    </UserControl.DataContext>
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label Content="Debug:"/>
            <TextBox Width="100" Text="{Binding InputString, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Run" Command="{Binding RunCommand}"/>
            <Button Content="Stop debug" Command="{Binding StartOrDropDebugCommand}"/>
            <Button Content="Step" Command="{Binding StepInCommand}"/>
            <Label Content="Result:"/>
            <Label Content="{Binding Result}"/>
        </StackPanel>
    </Grid>
</UserControl>
