<UserControl x:Class="ControlsLibrary.Controls.Executor.Executor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlsLibrary.Controls.Executor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:ExecutorViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Button Content="setAutomata" Command="{Binding SetAutomataCommand}"/>
        <Button Content="setString" Command="{Binding SetStringCommand}"/>
        <Button Content="step" Command="{Binding StepInCommand}"/>
        <TextBox Text="{Binding InputStr, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Content="{Binding Result}"/>
    </Grid>
</UserControl>
